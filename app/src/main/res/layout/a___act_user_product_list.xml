<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.at.drgrep.activity.UserProductList">

    <RelativeLayout
        android:id="@+id/v_user_upl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:id="@+id/rl1234567"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <LinearLayout
                android:id="@+id/name_initial_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/style_round2"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_initial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/app_black"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/username_upl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_initial_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:enabled="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/app_black"
                android:textSize="@dimen/app_header_text_size" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_edit_profile_upl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_below="@+id/rl1234567"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_buttonlayout2"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp" >

            <TextView
                android:id="@+id/profile_text_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/b"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/v_product_upl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/v_user_upl" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="#dbe1e2"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PRODUCTS"
                android:textColor="#9895a5"
                android:textSize="14sp" />

        </LinearLayout>

        <GridView
            android:id="@+id/grid_view_upl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LinearLayout01"
            android:numColumns="3" >

        </GridView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lower_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/v_product_upl"
        android:layout_marginTop="-100dp"
        android:background="#00000000" >

        <LinearLayout
            android:id="@+id/view_all_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/style_buttonlayout2"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW ALL"
                android:textColor="@color/b"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_product_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@mipmap/fab_add_product"
            app:layout_anchorGravity="bottom|right|end"
            />
          </RelativeLayout>

</RelativeLayout>